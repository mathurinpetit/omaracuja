<section class="bg-primary p-0" id="photos">
      <div class="container-fluid p-0">
        <div class="row no-gutters popup-gallery">
        {% for photovideo in onyetait %}
            {% if photovideo[0] == 'PHOTO' %}
              <div class="col-lg-4 col-sm-6">
                <a class="omaracuja-box" href="img/onyetait/fullsize/{{photovideo[3]}}" alt="{{photovideo[1]}}">
                  <img class="img-fluid" src="img/onyetait/thumbnails/{{photovideo[4]}}" alt="{{photovideo[1]}}">
                  <div class="omaracuja-box-caption">
                    <div class="omaracuja-box-caption-content">
                      <div class="project-category text-faded">
                        {{photovideo[1]}}
                      </div>
                      <div class="project-name">
                        {{photovideo[2]}}
                      </div>
                    </div>
                  </div>
                </a>
              </div>
              {% elseif photovideo[0] == 'YOUTUBE' %}
              <div class="col-lg-4 col-sm-6">
                  <div class="omaracuja-box container-video">
                      <iframe class="video" src="{{photovideo[1]}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                  </div>
              </div>
              {% endif %}
          {% endfor %}
      </div>
  </div>
</section>


