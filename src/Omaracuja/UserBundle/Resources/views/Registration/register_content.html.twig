{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'attr': {'class': 'fos_user_register'} }) }}
<div class="form-group">
    <div class="error_list">{{ form_errors(form.username) }}</div>
    {{ form_label(form.username) }}
    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'} }) }}
</div>
<div class="form-group">
    <div class="error_list">{{ form_errors(form.email) }}</div>
    {{form_label(form.email)}}
    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
</div>
<div class="form-group">
    <div class="error_list">{{ form_errors(form.plainPassword.first) }}</div>
    {{form_label(form.plainPassword.first)}}
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de Passe'} }) }}
</div>
<div class="form-group">
    <div class="error_list">{{ form_errors(form.plainPassword.second) }}</div>
    {{form_label(form.plainPassword.second)}}
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Mot de Passe'} }) }}
</div>
<div class="form-group">
    <div class="error_list">{{ form_errors(form.name) }}</div>
    {{form_label(form.name)}}
    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
</div>
<div class="form-group">
    <div class="error_list">{{ form_errors(form.firstname) }}</div>
    {{form_label(form.firstname)}}
    {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'} }) }}
</div>
<div class="form-group">
    <div class="text-left col-lg-6">
        <a class="btn btn-default text-left" href="{{ path('front_accueil') }}">Retour à l'accueil</a>
    </div>
    <div class="text-right col-lg-6">
        <input type="submit" class="btn btn-default btn-success text-right" value="{{ 'registration.submit'|trans }}" />
    </div>
</div>
{{form_end(form)}}
