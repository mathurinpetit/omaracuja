{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
    <div class="col-xs-8 col-xs-offset-2" >
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Edition du compte de {{ app.user.username }}</h2> 
            </div>
            <div class="panel-body">
                <div class="user_edit" id="crop-avatar">

                    {% if app.user.isAdmin() %}
                        <div class="col-md-12">            
                            <p class="profile_show_value">Votre compte est un compte administrateur</p>            
                        </div>        
                    {% endif %}

                    <div class="col-md-4">
                        <div class="avatar-link" title="Charger un nouvel avatar">
                            <img src="{{app.user.getCurrentAvatarPath}}" alt="{{app.user.username}}" class="img-rounded">
                        </div>
                        <br/>
                        <a href="#" class="avatar-view" >Changer d'avatar</a>
                        {% include 'OmaracujaUserBundle:Profile:avatar_cropping_modal.html.twig' with {'avatarForm': avatarForm} %}
                        {% include 'OmaracujaUserBundle:Profile:avatars_view_modal.html.twig' with {'avatarChooseForm': avatarChooseForm} %}
                    </div>
                    <div class="col-md-8">  
                        {{ form_start(form, {'attr': {'class': 'fos_user_profile_edit'} }) }}
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4"> 
                                    {{ form_label(form.username) }}
                                </div>
                                <div class="col-md-8"> 
                                    <div class="error_list">{{ form_errors(form.username) }}</div>
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': "Nom d'utilisateur"} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4"> 
                                    {{form_label(form.email)}}
                                </div>
                                <div class="col-md-8"> 
                                    <div class="error_list">{{ form_errors(form.email) }}</div>
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4"> 
                                    {{form_label(form.name)}}
                                </div>
                                <div class="col-md-8"> 
                                    <div class="error_list">{{ form_errors(form.name) }}</div>
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4"> 
                                    <div class="error_list">{{ form_errors(form.firstname) }}</div>
                                    {{form_label(form.firstname)}}
                                </div>
                                <div class="col-md-8"> 
                                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Pr√©nom'} }) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="text-left col-lg-6">
                                <a class="btn btn-default text-left" href="{{ path('fos_user_profile_show') }}">Retour au profile</a>
                            </div>
                            <div class="text-right col-lg-6">
                                <input type="submit" class="btn btn-default btn-success text-right" value="{{ 'profile.edit.submit'|trans }}" />
                            </div>
                        </div>
                        {{form_end(form)}}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>