<!-- Cropping modal -->
<div class="modal fade" id="avatars-view-modal" tabindex="-1" role="dialog" aria-labelledby="avatar-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form class="avatar-form" action="{{ path("avatar_select",{'id': user.id}) }}" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="avatar-modal-label">Choisir son Avatar</h4>
                </div>
                <div class="modal-body">
                    <div class="avatar-body">

                        <div class="">
                            {{ form_widget(avatarChooseForm.selectedAvatar, {'attr': {'class': 'avatar_select'} }) }}
                        </div>

                        <!-- Crop and preview -->
                        <div class="row">
                            <div class="col-lg-4 avatar-view-col">
                                <div class="avatar-view-choice">
                                    <img class="img-rounded {% if user.selectedAvatar is null %}avatar_selected{% endif %}" alt="{{user.username}}" src="/data/avatars/omaracuja_avatar.jpg" data-avatar_id="" >
                                </div>
                            </div>
                            {% for avatar_user in avatars %}
                                <div class="col-lg-4 avatar-view-col">
                                    <div class="avatar-view-choice">
                                        <img class="img-rounded {% if user.selectedAvatar and (avatar_user.id == user.selectedAvatar.id) %}avatar_selected{% endif %}" alt="{{user.username}}" src="{{ avatar_user.getWebPath }}" data-avatar_id="{{ avatar_user.id }}">
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" type="button" data-dismiss="modal">Fermer</button>
                    <button class="btn btn-primary avatar-save" type="submit">Sauvegarder</button>
                </div>
            </form>
        </div>
    </div>
</div><!-- /.modal -->

