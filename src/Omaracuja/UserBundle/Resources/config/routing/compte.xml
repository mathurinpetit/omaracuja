<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="fos_user_profile_show" pattern="/">
        <default key="_controller">FOSUserBundle:Profile:show</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="fos_user_profile_edit" pattern="/edition">
        <default key="_controller">OmaracujaUserBundle:Profile:edit</default>
    </route>
    
    <route id="avatar_upload" pattern="/avatar/telechargement">
        <default key="_controller">OmaracujaUserBundle:Avatar:upload</default>
    </route>

    <route id="avatar_upload_resize" pattern="/avatar/{id}/resize">
        <default key="_controller">OmaracujaUserBundle:Avatar:resize</default>
    </route>
    
    <route id="avatar_crop" pattern="/avatar/{id}/crop">
        <default key="_controller">OmaracujaUserBundle:Avatar:resize</default>
    </route>
    
    <route id="avatar_select" pattern="/avatar/{id}/select">
        <default key="_controller">OmaracujaUserBundle:Avatar:select</default>
    </route>
    
    <route id="compte_agenda" pattern="/agenda">
        <default key="_controller">OmaracujaUserBundle:Agenda:agenda</default>
    </route>
    
    <route id="compte_accept_event" pattern="/agenda/{idEvent}">
        <default key="_controller">OmaracujaUserBundle:Agenda:eventAccept</default>
    </route> 
    
    <route id="compte_events_past" pattern="/evennements-passes">
        <default key="_controller">OmaracujaUserBundle:Agenda:eventsPast</default>
    </route>           

</routes>
