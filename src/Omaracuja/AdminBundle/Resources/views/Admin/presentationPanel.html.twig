{% extends "::base.html.twig" %}

{% block title %}O Maracujá - Administation présentation{% endblock %}

{% block connexion %}
    {% render url('fos_user_security_login') %}
{% endblock %}

{% block content %}
    <div class="main">   
        <h1>Administation des pages de présentation</h1>
        {% if not actual_presentation is null %}
            <h2>{{ actual_presentation.title }}</h2>
            <br/>
            <br/>
            <div class="col-lg-5">
                <p>{{ actual_presentation.paragraph1 }}</p>
                {% if not actual_presentation.paragraph2 is null %}
                    <p>{{ actual_presentation.paragraph2 }}</p>
                {% endif %}
                {% if not actual_presentation.paragraph3 is null %}
                    <p>{{ actual_presentation.paragraph3 }}</p>
                {% endif %}
            </div>
            <div class="col-lg-7">
                <div class="row">
                    {% if not actual_presentation.mapLink is null %}                    
                        <iframe src="{{ actual_presentation.mapLink }}" width="600" height="450" frameborder="0" style="border:0"></iframe> 
                    {% endif %}
                </div>
                <br/> 
                {% if not actual_presentation.adresse is null %}   
                    <div class="row">
                        <div class="col-lg-4">
                            Adresse :
                        </div>
                        <div class="col-lg-8">
                            {{ actual_presentation.adresse }}
                        </div>                
                    </div> 
                {% endif %} 
                {% if not actual_presentation.contact is null %}   
                    <br/>
                    <div class="row">
                        <div class="col-lg-4">
                            Contactez-nous :
                        </div>
                        <div class="col-lg-8">
                            {{ actual_presentation.contact }}
                        </div>                
                    </div>
                {% endif %} 
                {% if not actual_presentation.fbLink is null %}   

                    <br/>
                    <div class="row">
                        <div class="col-lg-4">
                            Facebook c'est AC
                        </div>
                        <div class="col-lg-8">
                            {{ actual_presentation.fbLink }}
                        </div>                
                    </div>
                {% endif %}   
            </div>
            <br/> 
            <br/> 
            <br/>  
            <br/>
            <div class="form-group">
                <div class="text-left col-lg-6">
                    <a href="{{ path('front_presentation') }}" class="btn btn-default text-left">Retour à l'accueil</a>
                </div>
                <div class="text-right col-lg-6">
                    <a href="{{ path('admin_new_presentation') }}" class="btn btn-default btn-warning text-right">Ajout d'une page de présentation</a>
                </div>
            </div>
        {% else %} 
            <br/>
            <div class="col-lg-12"> 
                Aucune page de présentation n'existe pour le moment.
            </div> 
            <br/>
            <br/> 
            <br/>
            <div class="form-group">
                <div class="text-left col-lg-6">
                    <a href="{{ path('front_presentation') }}" class="btn btn-default text-left">Retour à l'accueil</a>
                </div>
                <div class="text-right col-lg-6">
                    <a href="{{ path('admin_new_presentation') }}" class="btn btn-default btn-warning text-right">Ajout d'une page de présentation</a>
                </div>
            </div>
        {% endif %}   
    </div>


{% endblock %}