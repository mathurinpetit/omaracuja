{% extends "::base.html.twig" %}

{% block title %}Omaracuja - Administation Evénements{% endblock %}

{% block connexion %}
    {% render url('fos_user_security_login') %}
{% endblock %}

{% block content %}
    <div class="main">

        <div class="col-md-12">
            <div class="row" id="crop-picture">
                <a href="#" class="picture-link btn btn-default btn-danger text-right">Ajouter une photo</a>
                {% include 'OmaracujaAdminBundle:Admin:picture_cropping_modal.html.twig' with {'pictureForm': form } %}
                {%for picture in pictures %}
                    <div class="col-md-5">
                        <div class="row event_left">
                            <br/>
                            <h1>{{picture.title}}</h1>
                            <div id="{{picture.id}}" class='crop-picture'>
                                <div class="picture-link picture-view" title="Choisir une image pour cet événement">
                                    <img src="{{picture.getWebPath}}" alt="{{picture.title}}" class="img-rounded">
                                </div>   
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}