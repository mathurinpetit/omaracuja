
{% set indexCarousel = 0 %}
<div class="col-md-12" >
    {% for month,eventsWithAlbum in eventsByMonthWithAlbum %}
        <h2>{{month}}</h2>
         {% for eventWithAlbum in eventsWithAlbum %}
             <a href="{{ path('admin_add_event_album',{ 'eventId': eventWithAlbum.event.id }) }}">
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <h3 class="text-danger">{{eventWithAlbum.event.title}}</h3>
            <div class="thumbnail">
                <div class="img-with-title">
                    {% for picture in eventWithAlbum.pictures %}
                        {% set class = 'rotate'~loop.index0~'0' %}
                    <img src="{{picture.getCurrentPicturePath}}" alt="{{picture.title}}" class="img-responsive {{class}}">
                    {% endfor %}
                </div>
            </div>
        </div> </a>
        {% set indexCarousel = indexCarousel + 1  %}       
    {% endfor %}
    {% endfor %}
</div>
<hr>