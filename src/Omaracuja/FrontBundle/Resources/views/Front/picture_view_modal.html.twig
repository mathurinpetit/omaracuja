<div class="modal fade picture-view-modal" id="picture-view-modal" tabindex="-1" role="dialog" aria-labelledby="picture-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="col-lg-12">
            <div class="modal-content picture-view-modal-content">

                <div id="picture-carousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        {% set indexCarousel = 0 %}
                        {% for picture in picturesCollection %}
                                <li data-target="#picture-carousel" data-slide-to="{{ indexCarousel }}" class="{% if loop.first %}active{% endif %}"></li>
                                {% set indexCarousel = indexCarousel + 1  %}       
                        {% endfor %}
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        {% for picture in picturesCollection %}
                                <div class="item {% if loop.first %}active{% endif %}">
                                    <img src="{{picture.getCurrentPicturePath}}" alt="{{picture.title}}">
                                    <div class="carousel-caption">
                                        <h2>{{picture.title}}</h2>
                                        <p>{{picture.description}}</p>
                                    </div>
                                </div>
                        {% endfor %}
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#picture-carousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#picture-carousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
        </div> 
    </div>
</div>
