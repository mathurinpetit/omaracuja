    <div class="row">

        <div class="col-md-8 col-md-offset-2">
            <div class="row"> 
                <div class="col-md-8 text-left">
                    <h3 class="text-red-omaracuja">{{ video.title }}</h3>                    
                </div>
                <div class="col-md-4 text-right">
                    <h4 class="text-muted">  </h4>
                </div>
            </div>
        </div>
    </div>  
    <div class="row">
        <div class="col-md-8 col-md-offset-2"> 
            {% autoescape false %}
