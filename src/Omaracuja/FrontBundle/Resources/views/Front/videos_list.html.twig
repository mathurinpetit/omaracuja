{% for video in videos %}
    <div class="row">

        <div class="md-12">
            <div class="row"> 
                <div class="md-8">
                    <h3 class="text-danger">{{ video.title }}</h3>                    
                </div>
                <div class="md-4 text-right">
                    <h4 class="text-muted"> {{ video.createdAtFr }} </h4>
                </div>
            </div>
        </div>
    </div>  
    <div class="row">
        <div class="md-12"> 
            {% autoescape false %}
                {{ video.url }}
            {% endautoescape %}
        </div>
    </div>  
    {% if admin is defined and admin %}
        <div class="row">
            <div class="md-12"> 
                <a href="{{ path('admin_panel_videos_remove', { 'idVideo' : video.id }) }}" class="text-danger">supprimer la vid√©o</a>
            </div>
        </div> 
    {% endif %}
{% endfor %}