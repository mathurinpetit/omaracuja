<div class="row post panel panel-default">
    <div class="col-lg-3">
        <div class="row">
            <div class="col-lg-6">
                <a href="{{ path('fos_user_profile_show') }}">
                    <img src="{{ user.getCurrentAvatarPath }}" alt="{{ user.name }}" class="img-rounded post_user_avatar"> 
                </a>
            </div>
            <div class="col-lg-6">
                <p class="post_user_description">{{ user.username }}</p>
                <p class="post_user_description">{{ user.firstname }} {{ user.name }}</p>
                <p class="post_user_description"></p>
            </div>
        </div>
    </div>
    {{ form_start(newBlogPostForm, {'attr': {'novalidate': 'novalidate'} }) }}
    <div class="col-lg-9">
        <div class="row">
            <div class="col-lg-10">
                <div class="row panel panel-default">
                    {{ form_widget(newBlogPostForm.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre du Post'} }) }}
                </div>
                <div class="row panel panel-default">
                    {{ form_widget(newBlogPostForm.content, {'attr': {'class': 'form-control summernote', 'placeholder': 'Ajouter un Post'} }) }}
                </div>
            </div>
            <div class="col-lg-2">
                <div class="row post">
                    {{ form_label(newBlogPostForm.public) }}
                    {{ form_widget(newBlogPostForm.public) }}
                </div>
                <input type="submit" class="btn btn-default btn-success text-right" value="Enregistrer" />
            </div>
        </div>
    </div>
    {{form_end(newBlogPostForm)}}
</div>
